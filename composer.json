{
    "name": "php-etl/react-loop-adapter",
    "description": "Helper functions for using promises with ReactPHP event loop",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Gr√©gory Planchat",
            "email": "gregory@kiboko.fr"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Kiboko\\Component\\ReactLoopAdapter\\": "src/"
        },
        "files": [
            "src/promises.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "unit\\Kiboko\\Component\\ReactLoopAdapter\\": "tests/unit"
        }
    },
    "require": {
        "react/event-loop": "^1.1",
        "php-etl/promise": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "johnkary/phpunit-speedtrap": "*",
        "mybuilder/phpunit-accelerator": "*",
        "phpunit/php-invoker": "*"
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.1.x-dev"
        }
    }
}
